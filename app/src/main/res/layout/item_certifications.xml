<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search For Credential"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="28dp"
        android:textSize="15dp"
        android:textColor="#848297"
        android:fontFamily="@font/sf_500"/>
    <TextView
        android:id="@+id/tvSearchForCredential"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="7dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_500"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="16dp"
        android:background="#D2DCE2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Effective Date"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textColor="#848297"
        android:fontFamily="@font/sf_500"/>
    <TextView
        android:id="@+id/tvEffectiveDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="7dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_500"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="16dp"
        android:background="#D2DCE2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiration Date"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textColor="#848297"
        android:fontFamily="@font/sf_500"/>
    <TextView
        android:id="@+id/tvExpirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="7dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_500"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="16dp"
        android:background="#D2DCE2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Uploaded File"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textColor="#848297"
        android:fontFamily="@font/sf_500"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="17dp"
        android:visibility="visible"
        android:layout_marginHorizontal="16dp"
        android:src="@drawable/test3"/>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_delete_outline_24"
        app:tint="@android:color/holo_red_dark"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:background="#D2DCE2"/>

</LinearLayout>