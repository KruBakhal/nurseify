<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_bk">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/primary_gradient"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/back" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/sf_500"
                    android:gravity="center"
                    android:text="Facility Details"
                    android:textColor="@color/white"
                    android:textSize="27dp" />

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/page_bk"
                android:orientation="horizontal"
                android:padding="21dp">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bk_page_white"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="18dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="31dp"
                                android:layout_height="31dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_card" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/sf_600"
                                android:gravity="center_vertical"
                                android:text="Facility Details"
                                android:textColor="#4B5660"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:id="@+id/edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:src="@drawable/ic_edit" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/sf_600"
                                    android:gravity="center_vertical"
                                    android:text="Edit"
                                    android:textColor="#8A4999"
                                    android:textSize="17dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="10dp"
                            android:background="#D2DCE2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="28dp"
                                android:fontFamily="@font/sf_500"
                                android:text="Facility Logo"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <ImageView
                                android:id="@+id/imgProfile"
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/test5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="28dp"
                                android:fontFamily="@font/sf_500"
                                android:text="Facility Name"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/facility_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Nurseify, Inc."
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:text="Facility Type"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tv_facility_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Other"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:text="Email"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tvEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="nurseify@gmail.com"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:text="Address"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tvAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="55 Fruit Street Boston, MA  02114"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:text="City"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tvCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Los Angeles"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:text="State"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tvState"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="California"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:id="@+id/tvPostCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Postcode"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:text="77288"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:text="Phone Number"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tvPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="9818851456"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/next"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="33dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/btn_primary"
                            android:fontFamily="@font/sf_600"
                            android:gravity="center"
                            android:text="Next"
                            android:textColor="@color/grad1"
                            android:textSize="18dp" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>