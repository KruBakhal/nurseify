<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@drawable/secondary_gradient"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/isdsd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="38dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="13dp"
                android:src="@drawable/back"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_600"
                android:gravity="top"
                android:text="Profile Setup"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgBack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgBack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/imgBack" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="23dp"
                android:background="#EFF3F6"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="14dp"
                android:paddingTop="21dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_personal_details" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/sf_600"
                        android:text="Facility Details"
                        android:textColor="#8A4999"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Facebook"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ed_fb"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/trans"
                    android:fontFamily="@font/sf_500"
                    android:gravity="center_vertical"
                    android:hint="https://"
                    android:imeOptions="actionNext"
                    android:inputType="textWebEditText"
                    android:maxLength="500"
                    android:maxLines="1"
                    android:paddingLeft="27dp"
                    android:textColor="@color/black"
                    android:textColorHint="#A4ADBB"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Twitter"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ed_tweet"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/trans"
                    android:fontFamily="@font/sf_500"
                    android:gravity="center_vertical"
                    android:hint="https://"
                    android:imeOptions="actionNext"
                    android:inputType="textWebEditText"
                    android:maxLength="500"
                    android:maxLines="1"
                    android:paddingLeft="27dp"
                    android:textColor="@color/black"
                    android:textColorHint="#A4ADBB"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Linkedin"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ed_linkin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/trans"
                    android:fontFamily="@font/sf_500"
                    android:gravity="center_vertical"
                    android:hint="https://"
                    android:imeOptions="actionNext"
                    android:inputType="textWebEditText"
                    android:maxLength="500"
                    android:maxLines="1"
                    android:paddingLeft="27dp"
                    android:textColor="@color/black"
                    android:textColorHint="#A4ADBB"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Instagram"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ed_insta"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/trans"
                    android:fontFamily="@font/sf_500"
                    android:gravity="center_vertical"
                    android:hint="https://"
                    android:imeOptions="actionNext"
                    android:inputType="textWebEditText"
                    android:maxLength="500"
                    android:maxLines="1"
                    android:paddingLeft="27dp"
                    android:textColor="@color/black"
                    android:textColorHint="#A4ADBB"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Pinterest"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ed_pinterest"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/trans"
                    android:fontFamily="@font/sf_500"
                    android:gravity="center_vertical"
                    android:hint="https://"
                    android:imeOptions="actionNext"
                    android:inputType="textWebEditText"
                    android:maxLength="500"
                    android:maxLines="1"
                    android:paddingLeft="27dp"
                    android:textColor="@color/black"
                    android:textColorHint="#A4ADBB"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="TikTok"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ed_tiktok"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/trans"
                    android:fontFamily="@font/sf_500"
                    android:gravity="center_vertical"
                    android:hint="https://"
                    android:imeOptions="actionNext"
                    android:inputType="textWebEditText"
                    android:maxLength="500"
                    android:maxLines="1"
                    android:paddingLeft="27dp"
                    android:textColor="@color/black"
                    android:textColorHint="#A4ADBB"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Sanpchat"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ed_snap"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/trans"
                    android:fontFamily="@font/sf_500"
                    android:gravity="center_vertical"
                    android:hint="https://"
                    android:imeOptions="actionNext"
                    android:inputType="textWebEditText"
                    android:maxLength="500"
                    android:maxLines="1"
                    android:paddingLeft="27dp"
                    android:textColor="@color/black"
                    android:textColorHint="#A4ADBB"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Youtube"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/ed_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/trans"
                    android:fontFamily="@font/sf_500"
                    android:gravity="center_vertical"
                    android:hint="https://"
                    android:imeOptions="actionNext"
                    android:inputType="textWebEditText"
                    android:maxLength="500"
                    android:maxLines="1"
                    android:paddingLeft="27dp"
                    android:textColor="@color/black"
                    android:textColorHint="#A4ADBB"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="33dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/btn_primary"
                    android:fontFamily="@font/sf_600"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="@color/grad1"
                    android:textSize="18dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sf_600"
            android:text="Please Wait"
            android:textColor="@color/secondary_purple"
            android:textSize="20dp" />
    </LinearLayout>

</FrameLayout>