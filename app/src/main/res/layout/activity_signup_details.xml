<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/primary_gradient"
        tools:context=".screens.machenic.AppliedJobDetailsActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/back" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/sf_600"
                        android:gravity="center"
                        android:text="Sign up"
                        android:textColor="@color/white"
                        android:textSize="29dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    app:layout_constraintBottom_toTopOf="@+id/logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="103dp"
                        android:layout_height="103dp"
                        android:src="@drawable/logo_circle"
                        app:tint="#8A4999"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="61dp"
                        android:layout_height="61dp"
                        android:src="@drawable/logo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="21dp"
                    android:layout_marginTop="12dp"
                    android:background="#EFF3F6"
                    android:orientation="vertical"
                    android:paddingHorizontal="25dp"
                    android:paddingVertical="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sf_500"
                        android:gravity="left"
                        android:text="Password"
                        android:textColor="@color/grad1"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/ed_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/trans"
                        android:fontFamily="@font/sf_500"
                        android:hint="*************"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLength="255"
                        android:paddingLeft="10dp"
                        android:textColor="#A4ADBB"
                        android:textCursorDrawable="@drawable/effect_cursor_color"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grad1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/sf_400"
                        android:gravity="left"
                        android:text="Note : Your password must be more than 6 characters long, should contain at-least 1 Uppercase, 1 Lowercase, 1 Numeric and 1 special character."
                        android:textColor="#AAB3BB"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/sf_500"
                        android:gravity="left"
                        android:text="Confirm Password"
                        android:textColor="@color/grad1"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/ed_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/trans"
                        android:fontFamily="@font/sf_500"
                        android:hint="*************"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:textColor="#A4ADBB"
                        android:textCursorDrawable="@drawable/effect_cursor_color"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grad1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="18dp"
                        android:fontFamily="@font/sf_500"
                        android:gravity="left"
                        android:text="Nurse License State"
                        android:textColor="@color/grad1"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/ed_state"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/trans"
                        android:fontFamily="@font/sf_500"
                        android:hint="ex. Texas"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="15"
                        android:paddingLeft="10dp"
                        android:textColor="#A4ADBB"
                        android:textCursorDrawable="@drawable/effect_cursor_color"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grad1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="19dp"
                        android:fontFamily="@font/sf_500"
                        android:gravity="left"
                        android:text="Nurse License Number"
                        android:textColor="@color/grad1"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/ed_license_nos"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/trans"
                        android:fontFamily="@font/sf_500"
                        android:hint="XXXXXXXXXXXXXXX"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingLeft="10dp"
                        android:textColor="#A4ADBB"
                        android:textCursorDrawable="@drawable/effect_cursor_color"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grad1" />

                    <TextView
                        android:id="@+id/tv_spec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="19dp"
                        android:fontFamily="@font/sf_500"
                        android:gravity="left"
                        android:text="Specialty"
                        android:textColor="@color/grad1"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tv_specialty"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@color/trans"
                                android:fontFamily="@font/sf_500"
                                android:gravity="left|center"
                                android:hint="Select Specialty"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:paddingLeft="10dp"
                                android:textColor="#A4ADBB"
                                android:textSize="16dp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_specialty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="#EFF3F6"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/lay_spec"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="17dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/dropdown" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grad1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/sf_500"
                        android:gravity="left"
                        android:text="Preferred Geography"
                        android:textColor="@color/grad1"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_greography"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@color/trans"
                            android:fontFamily="@font/sf_500"
                            android:gravity="left|center"
                            android:hint="Select Preferred Geography"

                            android:imeOptions="actionDone"
                            android:paddingLeft="10dp"
                            android:textColor="#A4ADBB"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:id="@+id/lay_geo"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="17dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/dropdown" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grad1" />

                    <TextView
                        android:id="@+id/submit"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="37dp"
                        android:background="@drawable/btn_primary"
                        android:fontFamily="@font/sf_600"
                        android:gravity="center"
                        android:text="Submit"
                        android:textColor="@color/grad1"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="17dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sf_500"
                            android:gravity="center"
                            android:text="Already have an account?"
                            android:textColor="#A4ADBB"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sf_600"
                            android:gravity="center"
                            android:text=" Login"
                            android:textColor="@color/grad1"
                            android:textSize="15dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>