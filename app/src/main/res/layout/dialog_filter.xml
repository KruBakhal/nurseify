<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@drawable/secondary_gradient"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Filter"
            android:textSize="27dp"
            android:fontFamily="@font/sf_500"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/close_dialog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="64dp"
            android:layout_marginHorizontal="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:background="#F5F7F9"
            android:scrollbars="none">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_600"
                    android:layout_marginLeft="15dp"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="27dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="40dp"
                    app:cardBackgroundColor="@color/white">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/heart"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E8EAEC"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:visibility="visible"
                android:layout_marginHorizontal="26dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Pin Code"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/sf_500"
                    android:textColor="#A4ADBB"
                    android:background="@drawable/bk_grey"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="City"
                    android:layout_marginHorizontal="19dp"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/sf_500"
                    android:textColor="#A4ADBB"
                    android:background="@drawable/bk_grey"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="State"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/sf_500"
                    android:textColor="#A4ADBB"
                    android:background="@drawable/bk_grey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:visibility="visible"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_600"
                    android:layout_marginLeft="15dp"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="27dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E8EAEC"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="visible"
                android:background="@drawable/bk_grey"
                android:layout_marginHorizontal="26dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    tools:listitem="@layout/item_chips"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="17dp"
                android:visibility="visible"
                android:orientation="horizontal">
                <View
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bk_radio_unselect"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select All"
                    android:layout_marginLeft="6dp"
                    android:textColor="#5B6268"
                    android:textSize="17dp"
                    android:fontFamily="@font/sf_400"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:visibility="visible"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_600"
                    android:layout_marginLeft="15dp"
                    android:text="Work Days"
                    android:textColor="@color/black"
                    android:textSize="27dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E8EAEC"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bk_grey"
                android:layout_marginHorizontal="26dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    tools:listitem="@layout/item_chips"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bk_radio_unselect"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select All"
                    android:layout_marginLeft="6dp"
                    android:textColor="#5B6268"
                    android:textSize="17dp"
                    android:fontFamily="@font/sf_400"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_600"
                    android:layout_marginLeft="15dp"
                    android:text="Shift Preference"
                    android:textColor="@color/black"
                    android:textSize="27dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E8EAEC"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bk_grey"
                android:layout_marginHorizontal="26dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    tools:listitem="@layout/item_chips"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bk_radio_unselect"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select All"
                    android:layout_marginLeft="6dp"
                    android:textColor="#5B6268"
                    android:textSize="17dp"
                    android:fontFamily="@font/sf_400"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_600"
                    android:layout_marginLeft="15dp"
                    android:text="Facility"
                    android:textColor="@color/black"
                    android:textSize="27dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E8EAEC"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/bk_grey"
                android:layout_marginHorizontal="26dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Select Your Facility"
                    android:layout_marginLeft="24dp"
                    android:textSize="17dp"
                    android:fontFamily="@font/sf_400"
                    android:textColor="#5B6268"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_600"
                    android:layout_marginLeft="15dp"
                    android:text="Hourly Rate Range "
                    android:textColor="@color/black"
                    android:textSize="27dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E8EAEC"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 1"
                android:fontFamily="@font/sf_600"
                android:layout_marginHorizontal="9dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:textSize="24dp"
                android:textColor="#2B3A37"/>
            <SeekBar
                android:id="@+id/distanceSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="27dp"
                android:layout_marginHorizontal="9dp"
                android:layout_marginTop="10dp"
                android:valueFrom="1.0"
                android:progressDrawable="@drawable/slider_custom_seekbar"
                android:thumb="@drawable/slider_custom_thumb"
                android:valueTo="500.0"
                app:labelBehavior="gone"
                android:value="1.0"/>

            <TextView
                android:id="@+id/text_apply"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="35dp"
                android:text="Apply Filters"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_corner_secondary"
                android:layout_marginTop="40dp"
                android:textSize="17dp"
                android:fontFamily="@font/sf_600"
                android:textColor="#595094"/>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>