<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@drawable/secondary_gradient"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/sf_600"
            android:gravity="top"
            android:text="Experience"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_close"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="43dp"
                android:background="#EFF3F6"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="14dp"
                android:paddingTop="21dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_certificate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:fontFamily="@font/sf_600"
                        android:text="Experience"
                        android:textColor="#8A4999"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Highest Nursing Degree"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_search_credential"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:background="@color/trans"
                        android:fontFamily="@font/sf_500"
                        android:gravity="left|center"
                        android:hint="Select Highest Nursing Degree"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingLeft="17dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hint"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/lay_nurse_degree"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="17dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/dropdown" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="College / University Name"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ed_colleage_name"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/trans"
                        android:fontFamily="@font/sf_500"
                        android:gravity="center_vertical"
                        android:hint="College / University Name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLength="255"
                        android:maxLines="1"
                        android:paddingLeft="17dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#A4ADBB"
                        android:textCursorDrawable="@drawable/effect_cursor_color"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Country"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ed_country"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/trans"
                        android:fontFamily="@font/sf_500"
                        android:gravity="center_vertical"
                        android:hint="Select Country"
                        android:maxLines="1"
                        android:paddingLeft="17dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#A4ADBB"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/lay_country"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="17dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/dropdown" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="State"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ed_state"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/trans"
                        android:fontFamily="@font/sf_500"
                        android:gravity="center_vertical"
                        android:hint="Select State"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="17dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#A4ADBB"
                        android:textCursorDrawable="@drawable/effect_cursor_color"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/lay_state"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_width="17dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/dropdown" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="City"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/ed_city"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/trans"
                        android:fontFamily="@font/sf_500"
                        android:gravity="center_vertical"
                        android:hint="City"
                        android:maxLines="1"
                        android:paddingLeft="17dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#A4ADBB"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:id="@+id/lay_city"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/img7"
                            android:layout_width="17dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/dropdown" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Acute Care Facility Experience"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ed_facility_exp"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/trans"
                        android:fontFamily="@font/sf_500"
                        android:gravity="center_vertical"
                        android:hint="Ex. 2 Years"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:paddingLeft="17dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#A4ADBB"
                        android:textCursorDrawable="@drawable/effect_cursor_color"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Non-Acute Care Nursing Experience"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ed_Nursing_exp"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/trans"
                        android:fontFamily="@font/sf_500"
                        android:gravity="center_vertical"
                        android:hint="Ex. 2 Years"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:paddingLeft="17dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#A4ADBB"
                        android:textCursorDrawable="@drawable/effect_cursor_color"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Cerner"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="1"
                            android:background="@color/trans"
                            android:fontFamily="@font/sf_500"
                            android:gravity="left|center"
                            android:hint="Select Year Of Experience"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingLeft="17dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:id="@+id/lay_center"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="17dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/dropdown" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Meditech"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_Meditech"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="1"
                            android:background="@color/trans"
                            android:fontFamily="@font/sf_500"
                            android:gravity="left|center"
                            android:hint="Select Year Of Experience"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingLeft="17dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:id="@+id/lay_Meditech"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="17dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/dropdown" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Epic"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_epic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="1"
                            android:background="@color/trans"
                            android:fontFamily="@font/sf_500"
                            android:gravity="left|center"
                            android:hint="Select Year Of Experience"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingLeft="17dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:id="@+id/lay_epic"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="17dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/dropdown" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/sf_500"
                    android:gravity="left"
                    android:text="Other"
                    android:textColor="#595094"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/ed_other"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/trans"
                        android:fontFamily="@font/sf_500"
                        android:gravity="center_vertical"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:paddingLeft="17dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="#A4ADBB"
                        android:textCursorDrawable="@drawable/effect_cursor_color"
                        android:textSize="16dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="#8A4999" />

                <TextView
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="33dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/btn_primary"
                    android:fontFamily="@font/sf_600"
                    android:gravity="center"
                    android:text="Next"
                    android:textColor="@color/grad1"
                    android:textSize="18dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sf_600"
                android:text="Please Wait"
                android:textColor="@color/secondary_purple"
                android:textSize="20dp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>