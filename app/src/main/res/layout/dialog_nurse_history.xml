                        android:text="03/08/2021"
                        android:fontFamily="@font/sf_500"
                        android:textSize="16dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expiration Date"
                        android:fontFamily="@font/sf_500"
                        android:textSize="14dp"
                        android:textColor="#8A9B9B"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20/08/2021"
                        android:fontFamily="@font/sf_500"
                        android:textSize="16dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Uploaded File"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:textColor="#848297"
                android:fontFamily="@font/sf_500"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="17dp"
                android:layout_marginHorizontal="24dp"
                android:visibility="visible"
                android:src="@drawable/test3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nurseify-Desktop-UI_Design.pdf"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="#848297"
                android:fontFamily="@font/sf_500"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="24dp"
                android:visibility="visible"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date"
                        android:fontFamily="@font/sf_500"
                        android:textSize="14dp"
                        android:textColor="#8A9B9B"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05/08/2021"
                        android:fontFamily="@font/sf_500"
                        android:textSize="16dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date"
                        android:fontFamily="@font/sf_500"
                        android:textSize="14dp"
                        android:textColor="#8A9B9B"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18/08/2021"
                        android:fontFamily="@font/sf_500"
                        android:textSize="16dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description of Job Duties"
                android:fontFamily="@font/sf_500"
                android:layout_marginHorizontal="24dp"
                android:textSize="14dp"
                android:layout_marginTop="17dp"
                android:textColor="#8A9B9B"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla a felis at libero vehicula porta sit amet vel velit. Pellentesque lacinia sem in mi malesuada porttitor. Vestibulum congue finibus justo. Sed eleifend quam quis vestibulum consequat. Aliquam congue, nibh et mollis vehicula, nisl augue posuere felis, tempus lobortis nisi nisl id orci."
                android:layout_marginHorizontal="24dp"
                android:fontFamily="@font/sf_500"
                android:visibility="visible"
                android:textSize="16dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resume"
                android:fontFamily="@font/sf_500"
                android:layout_marginHorizontal="24dp"
                android:textSize="14dp"
                android:layout_marginTop="17dp"
                android:textColor="#8A9B9B"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:visibility="visible"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:src="@drawable/test7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:layout_marginTop="30dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_file"
                    android:layout_marginRight="20dp"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_download"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>