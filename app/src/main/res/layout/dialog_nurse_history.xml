<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:paddingHorizontal="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/close"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_close" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:background="@drawable/bk_card_dialog"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sf_600"
                android:gravity="center"
                android:text="Work History &amp; Certifications "
                android:textColor="#444A52"
                android:textFontWeight="700"
                android:textSize="19dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="27dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:visibility="visible"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Highest Nursing Degree"
                        android:fontFamily="@font/sf_500"
                        android:textSize="14dp"
                        android:textColor="#8A9B9B"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bachelor's or BSN"
                        android:fontFamily="@font/sf_500"
                        android:textSize="16dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="College / University Name"
                        android:fontFamily="@font/sf_500"
                        android:textSize="14dp"
                        android:textColor="#8A9B9B"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="California Institute of Technology"
                        android:fontFamily="@font/sf_500"
                        android:textSize="16dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="17dp"
                android:visibility="visible"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acute Care Facility
Experience"
                        android:fontFamily="@font/sf_500"
                        android:textSize="14dp"
                        android:textColor="#8A9B9B"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Years"
                        android:fontFamily="@font/sf_500"
                        android:textSize="16dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Non-Acute Care Nursing
Experience"
                        android:fontFamily="@font/sf_500"
                        android:textSize="14dp"
                        android:textColor="#8A9B9B"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Years"
                        android:fontFamily="@font/sf_500"
                        android:textSize="16dp"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerner"
                android:fontFamily="@font/sf_500"
                android:layout_marginHorizontal="24dp"
                android:textSize="14dp"
                android:layout_marginTop="17dp"
                android:textColor="#8A9B9B"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TuAdvanced (5+ year's experience)"
                android:layout_marginHorizontal="24dp"
                android:fontFamily="@font/sf_500"
                android:textSize="16dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earliest Start Date"
                android:fontFamily="@font/sf_500"
                android:layout_marginHorizontal="24dp"
                android:textSize="14dp"
                android:layout_marginTop="17dp"
                android:textColor="#8A9B9B"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26/07/2021"
                android:layout_marginHorizontal="24dp"
                android:fontFamily="@font/sf_500"
                android:textSize="16dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"/>
         <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meditech"
                android:fontFamily="@font/sf_500"
                android:layout_marginHorizontal="24dp"
                android:textSize="14dp"
                android:layout_marginTop="17dp"
                android:textColor="#8A9B9B"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic (1-2year's experience)"
                android:layout_marginHorizontal="24dp"
                android:fontFamily="@font/sf_500"
                android:textSize="16dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"/>
         <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Epic"
                android:fontFamily="@font/sf_500"
                android:layout_marginHorizontal="24dp"
                android:textSize="14dp"
                android:layout_marginTop="17dp"
                android:textColor="#8A9B9B"/>
