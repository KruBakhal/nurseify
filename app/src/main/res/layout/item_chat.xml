<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="19dp"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TODAY AT 10:45 AM"
        android:fontFamily="@font/sf_500"
        android:textSize="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginBottom="35dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bk_message"
        android:paddingHorizontal="13dp"
        android:paddingVertical="17dp"
        android:layout_marginLeft="25dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi Amina! How are you?"
            android:textSize="14dp"
            android:fontFamily="@font/sf_500"
            android:textColor="#46454C"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 minutes ago"
            android:textSize="12dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/sf_500"
            android:textColor="#00A651"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bk_message_right"
        android:paddingHorizontal="13dp"
        android:layout_gravity="right"
        android:maxWidth="100dp"
        android:layout_marginTop="20dp"
        android:paddingVertical="17dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doing good, how do you feel about your patterens now?"
            android:textSize="14dp"
            android:maxWidth="200dp"
            android:fontFamily="@font/sf_500"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 minutes ago"
            android:textSize="12dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/sf_500"
            android:textColor="#00FF7C"/>
    </LinearLayout>
</LinearLayout>