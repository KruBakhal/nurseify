<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="19dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/sf_500"
        android:gravity="center"
        android:text="TODAY AT 10:45 AM"
        android:textColor="@color/black"
        android:textSize="10dp" />

    <LinearLayout
        android:id="@+id/lay_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:background="@drawable/bk_message"
        android:orientation="vertical"
        android:paddingHorizontal="13dp"
        android:paddingVertical="17dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_500"
            android:text="Hi Amina! How are you?"
            android:textColor="#46454C"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/sf_500"
            android:text="5 minutes ago"
            android:textColor="#00A651"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/bk_message_right"
        android:maxWidth="100dp"
        android:orientation="vertical"
        android:paddingHorizontal="13dp"
        android:paddingVertical="17dp">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_500"
            android:maxWidth="200dp"
            android:text="Doing good, how do you feel about your patterens now?"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/sf_500"
            android:text="5 minutes ago"
            android:textColor="#00FF7C"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>