<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:paddingHorizontal="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/close"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_close" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:background="@drawable/bk_card_dialog"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_600"
                    android:gravity="center"
                    android:text="Role Interest"
                    android:textColor="#444A52"
                    android:textFontWeight="700"
                    android:textSize="19dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="27dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:text="Are you interested in serving as a preceptor for
a graduate nurse?"
                    android:fontFamily="@font/sf_500"
                    android:layout_marginHorizontal="24dp"
                    android:textSize="14dp"
                    android:layout_marginTop="17dp"
                    android:textColor="#8A9B9B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:visibility="visible"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/sf_500"
                    android:textSize="16dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are you interested in serving as an interim nurse
leader?"
                    android:fontFamily="@font/sf_500"
                    android:visibility="visible"
                    android:layout_marginHorizontal="24dp"
                    android:textSize="14dp"
                    android:layout_marginTop="17dp"
                    android:textColor="#8A9B9B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/sf_500"
                    android:textSize="16dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clinical educator"
                    android:fontFamily="@font/sf_500"
                    android:visibility="visible"
                    android:layout_marginHorizontal="24dp"
                    android:textSize="14dp"
                    android:layout_marginTop="17dp"
                    android:textColor="#8A9B9B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/sf_500"
                    android:textSize="16dp"
                    android:visibility="visible"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daisy Award winner?"
                    android:fontFamily="@font/sf_500"
                    android:layout_marginHorizontal="24dp"
                    android:textSize="14dp"
                    android:visibility="visible"
                    android:layout_marginTop="17dp"
                    android:textColor="#8A9B9B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/sf_500"
                    android:textSize="16dp"
                    android:visibility="visible"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee of the mth, qtr, yr?"
                    android:fontFamily="@font/sf_500"
                    android:layout_marginHorizontal="24dp"
                    android:textSize="14dp"
                    android:visibility="visible"
                    android:layout_marginTop="17dp"
                    android:textColor="#8A9B9B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/sf_500"
                    android:textSize="16dp"
                    android:visibility="visible"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other nursing awards?"
                    android:fontFamily="@font/sf_500"
                    android:layout_marginHorizontal="24dp"
                    android:textSize="14dp"
                    android:visibility="visible"
                    android:layout_marginTop="17dp"
                    android:textColor="#8A9B9B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/sf_500"
                    android:textSize="16dp"
                    android:visibility="visible"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professional practice council?"
                    android:fontFamily="@font/sf_500"
                    android:layout_marginHorizontal="24dp"
                    android:textSize="14dp"
                    android:visibility="visible"
                    android:layout_marginTop="17dp"
                    android:textColor="#8A9B9B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/sf_500"
                    android:textSize="16dp"
                    android:visibility="visible"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Research / publications?"
                    android:fontFamily="@font/sf_500"
                    android:layout_marginHorizontal="24dp"
                    android:textSize="14dp"
                    android:visibility="visible"
                    android:layout_marginTop="17dp"
                    android:textColor="#8A9B9B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:visibility="visible"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/sf_500"
                    android:textSize="16dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:fontFamily="@font/sf_500"
                    android:layout_marginHorizontal="24dp"
                    android:textSize="14dp"
                    android:layout_marginTop="17dp"
                    android:textColor="#8A9B9B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/sf_500"
                    android:textSize="16dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introduction"
                    android:fontFamily="@font/sf_500"
                    android:layout_marginHorizontal="24dp"
                    android:textSize="14dp"
                    android:layout_marginTop="17dp"
                    android:textColor="#8A9B9B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:text="I have a Master’s Degree in nursing and 8+ years of proven experience effectively and efficiently managing both patients and staff. I am an extremely organized, calm, and patient professional with excellent healthcare skills. I have a passion for providing quality care to patients, and the necessary leadership skills to inspire other staff members to strive to provide above standard levels of service."
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/sf_500"
                    android:textSize="16dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YouTube / Vimeo Link"
                    android:fontFamily="@font/sf_500"
                    android:layout_marginHorizontal="24dp"
                    android:textSize="14dp"
                    android:layout_marginTop="17dp"
                    android:textColor="#8A9B9B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://vimeo.com/upgrade"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/sf_500"
                    android:textSize="16dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additional Photos"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"
                    android:textColor="#848297"
                    android:fontFamily="@font/sf_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="28dp"
                        android:background="#C4C4C4">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/test2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#C4C4C4">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/test2" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additional Files (e.g., Letters of Recommendation)"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"
                    android:textColor="#848297"
                    android:fontFamily="@font/sf_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="80dp"
                    android:background="#C4C4C4">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/test4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_file"
                        android:layout_marginRight="20dp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_download"
                        android:layout_marginRight="20dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>