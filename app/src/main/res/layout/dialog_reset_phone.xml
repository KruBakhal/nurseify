<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/close_dialog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="14dp"
            android:background="@drawable/bk_dialog"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_500"
                android:text="Enter New Phone Number"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:textColor="#595094"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="XXXXXXXXXX"
                    android:background="@color/trans"
                    android:textSize="16dp"
                    android:fontFamily="@font/sf_500"
                    android:textColorHint="#A4ADBB"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get OTP"
                    android:fontFamily="@font/sf_600"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="17dp"
                    android:background="@drawable/btn_reject" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="9dp"
                android:background="#595094" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="39dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:textSize="16dp"
                    android:layout_gravity="center"
                    android:maxLength="1"
                    android:layout_marginRight="17dp"
                    android:gravity="center"
                    android:background="@drawable/bg_otp"
                    android:fontFamily="@font/sf_500"
                    android:inputType="phone" />

                <EditText
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:textSize="16dp"
                    android:maxLength="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="17dp"
                    android:gravity="center"
                    android:background="@drawable/bg_otp"
                    android:fontFamily="@font/sf_500"
                    android:inputType="phone" />

                <EditText
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:textSize="16dp"
                    android:maxLength="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="17dp"
                    android:gravity="center"
                    android:background="@drawable/bg_otp"
                    android:fontFamily="@font/sf_500"
                    android:inputType="phone" />

                <EditText
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:textSize="16dp"
                    android:maxLength="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bg_otp"
                    android:fontFamily="@font/sf_500"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/done"
                android:layout_width="156dp"
                android:layout_height="51dp"
                android:layout_marginTop="34dp"
                android:gravity="center"
                android:background="@drawable/btn_corner_secondary"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Done"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:fontFamily="@font/sf_600"
                    android:textColor="#595094" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>