<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_bk">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/primary_gradient"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/back" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/sf_500"
                    android:gravity="center"
                    android:text="Work History &amp;\nCertifications"
                    android:textColor="@color/white"
                    android:textSize="27dp" />

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/page_bk"
                android:orientation="horizontal"
                android:padding="21dp">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bk_page_white"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="18dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="31dp"
                                android:layout_height="31dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_exprience"
                                app:tint="#4B5660" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/sf_600"
                                android:gravity="center_vertical"
                                android:text="Experience"
                                android:textColor="#4B5660"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:id="@+id/edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:src="@drawable/ic_edit" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/sf_600"
                                    android:gravity="center_vertical"
                                    android:text="Edit"
                                    android:textColor="#8A4999"
                                    android:textSize="17dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="10dp"
                            android:background="#D2DCE2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="28dp"
                                android:fontFamily="@font/sf_500"
                                android:text="Highest Nursing Degree"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tvHighestNurseDegree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:text="College / University Name"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tvCollageName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:text="Acute Care Facility Experience"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tvFacilityExperience"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:text="Non-Acute Care Nursing Experience"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tvNursingExperience"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:text="Cerner"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tvCerner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:text="Meditech"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tvMeditech"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:text="Epic"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tvEpic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="20dp"
                                android:fontFamily="@font/sf_500"
                                android:text="Other"
                                android:textColor="#848297"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/tvOther"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/sf_500"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="6dp"
                                android:background="#D2DCE2" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="18dp"
                            android:layout_marginTop="27dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_certificate"
                                app:tint="@color/black" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/sf_600"
                                android:gravity="center_vertical"
                                android:text="National Certifications\n&amp; Credentials"
                                android:textColor="#4B5660"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:id="@+id/edit31"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:src="@drawable/ic_add"
                                    app:tint="@color/secondary_purple" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/sf_600"
                                    android:gravity="center_vertical"
                                    android:text="Add"
                                    android:textColor="#8A4999"
                                    android:textSize="17dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/edit2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:src="@drawable/ic_edit" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/sf_600"
                                    android:gravity="center_vertical"
                                    android:text="Edit"
                                    android:textColor="#8A4999"
                                    android:textSize="17dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="10dp"
                            android:background="#D2DCE2" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="18dp"
                            android:layout_marginTop="17dp"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="18dp"
                            android:layout_marginTop="27dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:src="@drawable/ic_resume"
                                app:tint="#4B5660" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/sf_600"
                                    android:gravity="center_vertical"
                                    android:text="Resume"
                                    android:textColor="#4B5660"
                                    android:textSize="20dp" />

                                <LinearLayout
                                    android:id="@+id/edit3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:src="@drawable/ic_edit" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/sf_600"
                                        android:gravity="center_vertical"
                                        android:text="Edit"
                                        android:textColor="#8A4999"
                                        android:textSize="17dp" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="10dp"
                            android:background="#D2DCE2" />

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="26dp"
                            android:src="@drawable/ic_pdf" />

                        <LinearLayout
                            android:id="@+id/downloadFile"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="27dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="35dp"
                            android:background="@drawable/btn_square_secondary"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:fontFamily="@font/sf_600"
                                android:text="Download File"
                                android:textColor="#3D8172"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ProgressBar
                android:id="@+id/pg"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>