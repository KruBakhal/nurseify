<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@drawable/secondary_gradient"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/sf_600"
            android:gravity="top"
            android:text="Work History &amp; Certifications"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_close"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="43dp"
                android:background="#EFF3F6"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingHorizontal="14dp"
                android:paddingTop="21dp">

                <LinearLayout
                    android:id="@+id/layCer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_exprience" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/sf_600"
                            android:text="National Certifications\n&amp; Credentials"
                            android:textColor="#8A4999"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:background="#8A4999" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginHorizontal="9dp"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/sf_500"
                        android:gravity="left"
                        android:text="Search For Credential"
                        android:textColor="#595094"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="9dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_search_credential"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="1"
                            android:background="@color/trans"
                            android:fontFamily="@font/sf_500"
                            android:gravity="left|center"
                            android:hint="Select Credential"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingLeft="17dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/hint"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:id="@+id/lay_credential"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="17dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/dropdown" />
                        </LinearLayout>

                    </LinearLayout>


                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:background="#8A4999" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginHorizontal="9dp"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/sf_500"
                        android:gravity="left"
                        android:text="Effective Date"
                        android:textColor="#595094"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ed_effective_date"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="9dp"
                            android:layout_weight="1"
                            android:background="@color/trans"
                            android:fontFamily="@font/sf_500"
                            android:gravity="center_vertical"
                            android:hint="MM/DD/YYYY"
                            android:paddingLeft="17dp"
                            android:textColor="@color/black"
                            android:textColorHint="#A4ADBB"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/immgDate1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/ic_calender" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:background="#8A4999" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginHorizontal="9dp"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/sf_500"
                        android:gravity="left"
                        android:text="Expiration Date"
                        android:textColor="#595094"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ed_expired_date"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginHorizontal="9dp"
                            android:layout_weight="1"
                            android:background="@color/trans"
                            android:fontFamily="@font/sf_500"
                            android:gravity="center_vertical"
                            android:hint="MM/DD/YYYY"
                            android:paddingLeft="17dp"
                            android:textColor="@color/black"
                            android:textColorHint="#A4ADBB"
                            android:textSize="16dp" />

                        <ImageView

                            android:id="@+id/immgDate2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/ic_calender" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:background="#8A4999" />

                    <LinearLayout
                        android:id="@+id/lay_upload_file"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="9dp"
                        android:layout_marginTop="44dp"
                        android:background="@drawable/btn_square_secondary"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_upload" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/sf_600"
                            android:text="Upload File"
                            android:textColor="#3D8172"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgCertificate"
                        android:layout_width="51dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"

                        android:visibility="visible" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layRes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_resume" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/sf_600"
                            android:text="Resume"
                            android:textColor="#8A4999"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:background="#8A4999" />

                    <LinearLayout
                        android:id="@+id/lay_upload_resume"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="9dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/btn_square_secondary"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_upload" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/sf_600"
                            android:text="Upload Resume"
                            android:textColor="#3D8172"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgResume"
                        android:layout_width="51dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/ic_pdf"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="9dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:visibility="invisible">

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_500"
                            android:text="Active"
                            android:textColor="#4B5461"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="9dp"
                    android:layout_marginTop="33dp"
                    android:layout_marginBottom="70dp"
                    android:background="@drawable/btn_primary"
                    android:fontFamily="@font/sf_600"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="@color/grad1"
                    android:textSize="18dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sf_600"
                android:text="Please Wait"
                android:textColor="@color/secondary_purple"
                android:textSize="20dp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>