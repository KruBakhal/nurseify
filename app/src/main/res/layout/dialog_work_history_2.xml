<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/secondary_gradient"
    android:orientation="vertical"
    android:layout_gravity="top"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work History &amp; Certifications"
        android:layout_marginTop="17dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:fontFamily="@font/sf_600"
        android:textSize="22dp"
        android:textColor="@color/white"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="43dp"
        android:background="#EFF3F6"
        android:paddingTop="21dp"
        android:paddingHorizontal="14dp"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_exprience"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National Certifications\n&amp; Credentials"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/sf_600"
            android:textSize="20dp"
            android:textColor="#8A4999"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#8A4999"/>
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search For Credential"
            android:fontFamily="@font/sf_500"
            android:layout_marginHorizontal="9dp"
            android:layout_marginTop="17dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:textSize="15dp"
            android:textColor="#595094"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinner_degree"
                style="@style/spinner"
                android:layout_marginHorizontal="9dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingTop="0dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#8A4999"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Effective Date"
            android:fontFamily="@font/sf_500"
            android:layout_marginHorizontal="9dp"
            android:layout_marginTop="17dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:textSize="15dp"
            android:textColor="#595094"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:hint="DD/MM/YYYY"
                android:background="@color/trans"
                android:fontFamily="@font/sf_500"
                android:layout_marginHorizontal="9dp"
                android:paddingLeft="27dp"
                android:textColorHint="#A4ADBB"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_calender"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#8A4999"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expiration Date"
        android:fontFamily="@font/sf_500"
        android:layout_marginHorizontal="9dp"
        android:layout_marginTop="17dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:textSize="15dp"
        android:textColor="#595094"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:hint="DD/MM/YYYY"
                android:background="@color/trans"
                android:fontFamily="@font/sf_500"
                android:layout_marginHorizontal="9dp"
                android:paddingLeft="27dp"
                android:textColorHint="#A4ADBB"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_calender"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#8A4999"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="44dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/btn_square_secondary"
            android:layout_marginHorizontal="9dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_upload"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Upload File"
                android:textSize="16dp"
                android:fontFamily="@font/sf_600"
                android:textColor="#3D8172"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_resume"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resume"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/sf_600"
                android:textSize="20dp"
                android:textColor="#8A4999"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="#8A4999"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/btn_square_secondary"
            android:layout_marginHorizontal="9dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_upload"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="Upload Resume"
                android:textSize="16dp"
                android:fontFamily="@font/sf_600"
                android:textColor="#3D8172"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="9dp"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:fontFamily="@font/sf_500"
                android:textSize="14dp"
                android:textColor="#4B5461"/>
        </LinearLayout>
        <TextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="33dp"
            android:layout_marginBottom="30dp"
            android:text="Submit"
            android:layout_marginHorizontal="9dp"
            android:background="@drawable/btn_primary"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/grad1"
            android:fontFamily="@font/sf_600"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>