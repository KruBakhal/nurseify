<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="alertWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/trans</item>
    </style>

    <style name="AlertDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/alertWrapper</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="spinner">
        <item name="android:background">@drawable/spinner_bg_new</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">

        <item name="colorAccent">#2BE3BD</item>
        <item name="colorPrimary">@color/black</item>

    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#CACACA</item>
        <item name="colorControlActivated">#FFD53D</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>

        <item name="android:weekNumberColor">@color/white</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">#2BE3BD</item>
    </style>

    <style name="Rslider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Slider</item>
    </style>

    <style name="ThemeOverlay.Slider" parent="">
        <!-- change the line color -->
        <item name="colorPrimary">@color/secondary_till</item>
    </style>
</resources>